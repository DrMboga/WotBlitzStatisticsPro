@inject IStringLocalizer<App> Localize
@if(Player != null) 
{
<div class="container d-flex flex-column">
    <div class="d-flex flex-row">
        @Player.Nickname
        @if (Player.ClanTag != null)
        {
            <span class="ms-1" style="color: @Constants.ClanTagColor;"> [<span style="font-weight: bolder;">@Player.ClanTag</span>]</span>
        }
    </div>
    <div class="d-flex flex-row">
        <div class="ms-1" title="@Localize["Win rate"]">
            <span style="font-size: 12px; color: @Player.WinRate.ScaleColor()"> <img src="/icons/details.wins.scale-200.png" width="16px" height="16px"> @Player.WinRate.ToString("N0")%</span>
        </div>
        <div class="ms-1" title="@Localize["Battles"]">
            <span style="font-size: 12px"><img src="/icons/details.battles.scale-200.png" width="16px" height="16px"> @Player.Battles.ToString("N0")</span>
        </div>        
        <div class="ms-1" title="@Localize["Last battle"]">
            <span style="font-size: 12px"><img src="/icons/last.battle.time.scale-200.png" width="16px" height="16px"> @Player.LastBattle.ConvertToLocalTime().ToString("G")</span>
        </div>
    </div>
</div>
}
@code {
    [Parameter]
    public ShortPlayerInfoDto? Player { get; set; }
}
